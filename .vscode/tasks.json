{
    "version": "2.0.0",
    "tasks": [
      {
          "label": "Build and debug",
          "type": "shell",
          "command": "make",
          "options": {
              "cwd": "${workspaceFolder}",
              "env": {
                  "PATH": "C:\\msys64\\usr\\bin\\;C:\\msys64\\mingw64\\bin"
              }
          },
          "problemMatcher": {
              "owner": "cpp",
              "fileLocation": [
                  "absolute"
              ],
              "pattern": {
                  "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                  "file": 1,
                  "line": 2,
                  "column": 3,
                  "severity": 4,
                  "message": 5
              }
          }
      }
]
}